# Email verification configuration
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=your_from_email_here
RESEND_FROM_NAME=TechMuse

# Base URL for verification links
# For local development: http://localhost:8501
# For production: https://yourdomain.com
BASE_URL=http://localhost:8501

# Educational mode settings (true/false)
# Set to "false" to send real emails instead of displaying verification links in the app
EDUCATIONAL_MODE=false

# Deployment mode - set to "true" when deploying to Streamlit Cloud
DEPLOYMENT=false

# Verified email for testing
# This is the only email that can receive verification emails in testing mode
VERIFIED_EMAIL=your_verified_email_here

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
